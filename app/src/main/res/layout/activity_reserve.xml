<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reserve_back"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="210dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="410dp"
        android:layout_height="52dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="#D16B4B"
        android:gravity="center"
        android:text="RESERVE A TABLE"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D16B4B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_x="23dp"
            android:layout_y="204dp"
            android:gravity="center"
            android:text="Date"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/date_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_x="180dp"
            android:layout_y="205dp"
            android:minHeight="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D16B4B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ocassion"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_x="23dp"
            android:layout_y="204dp"
            android:gravity="center"
            android:text="Type of occasion"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:typeface="serif" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/occasionSpinner"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_x="180dp"
            android:layout_y="205dp"
            android:minHeight="48dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D16B4B" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#D16B4B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/peopleNum"
            android:layout_width="146dp"
            android:layout_height="54dp"
            android:layout_x="24dp"
            android:layout_y="290dp"
            android:gravity="center"
            android:text="No. of People"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:typeface="serif" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/childrenSpinner"
            android:layout_width="232dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_x="191dp"
            android:layout_y="377dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D16B4B" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#D16B4B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="153dp"
            android:layout_height="49dp"
            android:layout_x="23dp"
            android:layout_y="377dp"
            android:gravity="center"
            android:text="No. of children    (if any)"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:typeface="serif" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/numberSpinner"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_x="179dp"
            android:layout_y="291dp"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#D16B4B" />

    <Button
        android:id="@+id/reserve"
        android:layout_width="116dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_x="137dp"
        android:layout_y="500dp"
        android:background="#D16B4B"
        android:text="RESERVE"
        app:backgroundTint="#D16B4B" />


</LinearLayout>